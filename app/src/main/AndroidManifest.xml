<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jose.smartlapalma">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.Activities.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.Activities.MainActivity"
            android:configChanges="orientation"
            android:label="@string/main_activity_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.Activities.ContactActivity"
            android:configChanges="orientation"
            android:label="@string/contact_activity_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.Activities.AboutActivity"
            android:configChanges="orientation"
            android:label="@string/about_activity_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.Activities.NewsActivity"
            android:configChanges="orientation"
            android:label="@string/news_activity_name"
            android:screenOrientation="portrait" />
        <activity android:name=".Views.Activities.NewDetailActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>