<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jose.smartlapalma">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Views.Activities.SplashActivity">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.Activities.MainActivity"
            android:label="@string/main_activity_name">
        </activity>
        <activity
            android:name=".Views.Activities.ContactActivity"
            android:label="@string/contact_activity_name" />
        <activity
            android:name=".Views.Activities.AboutActivity"
            android:label="@string/about_activity_name" />
    </application>

</manifest>